<tool id="{{cookiecutter.__pkg_name}}{{cookiecutter.__exec_hint}}" name="{{cookiecutter.project_name}}" version="{{cookiecutter.version}}" python_template_version="3.5" profile="21.05">
    <description>a cool tool, not for fools</description>
    <requirements>
        <container type="docker">{{cookiecutter.project_source_repo|replace("-","")|replace("https://github.com/","")|replace(".git","")|lower}}:{{cookiecutter.version}}</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        {{cookiecutter.__pkg_name}} -a -b --cee $input > $output
    ]]></command>
    <inputs>
        <param type="data" name="input" format="fastqsanger,fastqsanger.gz,fastqsanger.bz2" />
    </inputs>
    <outputs>
        <data name="output" format="fasta" />
    </outputs>
    <tests>
        <test>
            <param name="input" value="test/reads/input.fastq.gz" />
            <output name="output" value="test/assemblies/output.fasta" />
        </test>
    </tests>
    <help><![CDATA[
        Some important help text.
    ]]></help>
    <citations>
        <citation type="doi">XXXXX</citation>
        <citation type="bibtex">
